<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<geometry version="0.5" caption="second life" unit="m"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="../../xsd/jps_geometry.xsd">
	<rooms>
		<room id="0" caption="hall">
			<subroom id="0" closed="0" class="subroom">
				<polygon caption="wall_left">
					<vertex px="4.0" py="0.0" />
					<vertex px="0.0" py="0.0" />
					<vertex px="0.0" py="20.0" />
					<vertex px="4.0" py="20.0" />
				</polygon>
				<polygon caption="wall_right">
					<vertex px="26.0" py="20.0" />
					<vertex px="30.0" py="20.0" />
					<vertex px="30.0" py="0.0" />
					<vertex px="26.0" py="0.0" />
				</polygon>
				<polygon caption="wall_top">
					<vertex px="5.0" py="20.0" />
					<vertex px="25.0" py="20.0" />
				</polygon>
				<polygon caption="wall_bottom">
					<vertex px="5.0" py="0.0" />
					<vertex px="25.0" py="0.0" />
				</polygon>
			</subroom>
		</room>
	</rooms>

	<transitions>
		<!-- exits like crossings but between rooms or to outside (room with index
			= -1) -->
		<transition id="0" caption="main exit 1" type="emergency"
			room1_id="0" subroom1_id="0" room2_id="-1" subroom2_id="-1">
			<vertex px="4.0" py="20.0" />
			<vertex px="5.0" py="20.0" />
		</transition>
		
		<transition id="1" caption="main exit 2" type="emergency"
			room1_id="0" subroom1_id="0" room2_id="-1" subroom2_id="-1">
			<vertex px="25.0" py="20.0" />
			<vertex px="26.0" py="20.0" />
		</transition>
		
		<transition id="2" caption="main exit 3" type="emergency"
			room1_id="0" subroom1_id="0" room2_id="-1" subroom2_id="-1">
			<vertex px="4.0" py="0.0" />
			<vertex px="5.0" py="0.0" />
		</transition>
		
		<transition id="3" caption="main exit4" type="emergency"
			room1_id="0" subroom1_id="0" room2_id="-1" subroom2_id="-1">
			<vertex px="25.0" py="0.0" />
			<vertex px="26.0" py="0.0" />
		</transition>
		
	</transitions>
</geometry>
